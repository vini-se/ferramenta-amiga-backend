// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Friend {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  tel   String
  Loan  Loan[]

  @@map("tb_friends")
}

model Tool {
  id         Int     @id @default(autoincrement())
  name       String
  brand      String
  isLoanable Boolean
  Loan       Loan[]

  @@map("tb_tools")
}

model Loan {
  id           Int       @id @default(autoincrement())
  idFriend     Int
  friend       Friend    @relation(fields: [idFriend], references: [id])
  idTool       Int
  tool         Tool      @relation(fields: [idTool], references: [id])
  loanedAt     DateTime  @default(now())
  dateToReturn DateTime
  returnedAt   DateTime?

  @@map("tb_loan")
}
