generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Amigo {
  id         Int          @id @default(autoincrement())
  nome       String
  email      String       @unique
  telefone   String
  Emprestimo Emprestimo[]

  @@map("tb_amigos")
}

model Ferramenta {
  id              Int          @id @default(autoincrement())
  nome            String
  marca           String
  custo_aquisicao Int          @unique
  Emprestimo      Emprestimo[]

  @@map("tb_ferramentas")
}

model Emprestimo {
  id              Int        @id @default(autoincrement())
  id_amigo        Int
  amigo           Amigo      @relation(fields: [id_amigo], references: [id])
  id_ferramenta   Int
  ferramenta      Ferramenta @relation(fields: [id_ferramenta], references: [id])
  data_emprestimo DateTime
  data_devolucao  DateTime
  devolvido       Boolean

  @@map("tb_emprestimos")
}

model Teste {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())

  @@map("testes")
}
